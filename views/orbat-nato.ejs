    <div class="element-title">1st Special Forces Operational<br>Detachment - Delta</div>
    <svg class="lineSFODtoONETROOP">
        <line x1="50%" y1="280" x2="50%" y2="360" stroke="black" stroke-width="5"/>
    </svg>
    <div class="one-troop-container">
        <div class="one-troop-hq-container">
            <img src="/img/orbat/military_markings/sf_hq.png" alt="SF HQ" class="<%= oneTroopHQ.length === 0 ? 'img-blank' : '' %>">
            <div class="element-title <%= oneTroopHQ.length === 0 ? 'title-blank' : '' %>">DAGGER | Troop HQ | <br>1 Troop</div>
            <% if (oneTroopHQ.length === 0) { %>
            <% } else { %>
                <div class="troop-hq-members">
                    <% oneTroopHQ.forEach(function(member) { %>
                        <div class="member">
                            <a href="/profile-<%= member.saltProfile %>.html">
                                <%= member.rank %> <%= member.username %>
                            </a>
                        </div>
                    <% }); %>
                </div>
            <% } %>
            <svg class="lineTroopHQtoTeams">                   
                <line x1="50%" y1="0" x2="50%" y2="100" stroke="black" stroke-width="5"/>
                <line x1="0%" y1="100" x2="100%" y2="100" stroke="black" stroke-width="5"/>
                <line x1="50%" y1="100" x2="50%" y2="200" stroke="black" stroke-width="5"/>
                <line x1="0%" y1="100" x2="0%" y2="200" stroke="black" stroke-width="10"/>
