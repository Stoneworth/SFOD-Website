            </svg>
            <div class="teams-container">
                <div class="alpha-team-container <%= alphaTeam.length === 0 ? 'blank-container' : '' %>">
                    <img src="/img/orbat/military_markings/sf_team.png" alt="Alpha Team" class="<%= alphaTeam.length === 0 ? 'img-blank' : '' %>">
                    <div class="element-title <%= alphaTeam.length === 0 ? 'title-blank' : '' %>">Alpha Team | 1 Troop</div>
                    <% if (alphaTeam.length === 0) { %>
    
                    <% } else { %>
                        <div class="alpha-members">
                            <% alphaTeam.forEach(function(member) { %>
                                <div class="member">
                                    <a href="/profile-<%= member.saltProfile %>.html">
                                        <%= member.rank %> <%= member.username %>
                                    </a>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
                <div class="bravo-team-container <%= bravoTeam.length === 0 ? 'blank-container' : '' %>">
                    <img src="/img/orbat/military_markings/sf_team.png" alt="Bravo Team" class="<%= bravoTeam.length === 0 ? 'img-blank' : '' %>">
                    <div class="element-title <%= bravoTeam.length === 0 ? 'title-blank' : '' %>">Bravo Team | 1 Troop</div>
                    <% if (bravoTeam.length === 0) { %>
    
                    <% } else { %>
                        <div class="bravo-members">
                            <% bravoTeam.forEach(function(member) { %>
                                <div class="member">
                                    <a href="/profile-<%= member.saltProfile %>.html">
                                        <%= member.rank %> <%= member.username %>
