                    <% } %>
                </div>
                <div class="charlie-team-container <%= charlieTeam.length === 0 ? 'blank-container' : '' %>">
                    <img src="/img/orbat/military_markings/sf_team.png" alt="Charlie Team" class="<%= charlieTeam.length === 0 ? 'img-blank' : '' %>">
                    <div class="element-title <%= charlieTeam.length === 0 ? 'title-blank' : '' %>">Charlie Team | 1 Troop</div>
                    <% if (charlieTeam.length === 0) { %>
    
                    <% } else { %>
                        <div class="charlie-members">
                            <% charlieTeam.forEach(function(member) { %>
                                <div class="member">
                                    <a href="/profile-<%= member.saltProfile %>.html">
                                        <%= member.rank %> <%= member.username %>
                                    </a>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="three-troop-container">
